%section#top-header.row
  %h1.col-md-2
    - if signed_in?
      = link_to "MyFLiX", home_path
    - else
      = link_to "MyFLiX", root_path
  - if signed_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People"
    = form_tag(search_videos_path, method: "get", class: "col-md-5 navbar-form search-query") do
      .form-group
        = text_field_tag("query", params[:query], type: :text, placeholder: "Search for videos here", class: "form-control")
        = submit_tag "Search", name: nil, class: 'btn btn-default'
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{@current_user.name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              %a= link_to "Sign Out", sign_out_path
