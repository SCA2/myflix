%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        =form_tag(my_queue_path) do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              -@queue_items.each do |queue_item|
                =fields_for('queue_item[]', queue_item) do |item|
                  %tr
                    %td= item.text_field :order, class: "form-control"
                    %td= link_to item.object.video_title, item.object.video
                    %td= button_to "Play", nil, class: "btn btn-default"
                    %td= item.object.rating
                    %td= link_to item.object.category_name, item.object.category
                    %td= link_to "", item.object, method: :delete, class: "glyphicon glyphicon-remove"
          =submit_tag "Update Instant Queue", class: "btn btn-default"
