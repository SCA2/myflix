%section.admin_add_video
  .container
    .row
      .col-sm-10.col-sm-offset-1
        = bootstrap_form_for [:admin, @video], layout: :horizontal do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset.col-sm-8
            = f.text_field :title
            = f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]}), class: "form-control"
            = f.text_area :description, rows: 8, class: "form-control"
            = f.file_field :large_cover, class: "form-control"
            = f.file_field :small_cover, class: "form-control"
            = f.text_field :video_url, label: "Video URL", class: "form-control"

            .control.col-sm-12
              = f.submit "Add Video", label: "", class: "btn-default btn col-sm-offset-2"
